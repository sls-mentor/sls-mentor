{
  "npmScope": "sls-mentor",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "bootstrap",
          "build",
          "package",
          "test-circular",
          "test-linter",
          "test-type",
          "test-unit"
        ],
        "cacheDirectory": "nx-cache"
      }
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*"],
    "production": ["!{projectRoot}/**/*.test.tsx?"]
  },
  "targetDefaults": {
    "build": {
      "inputs": ["production", "^production"],
      "dependsOn": ["^build", "^package"]
    },
    "package": {
      "inputs": ["production", "^production"],
      "dependsOn": ["^package"],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/tsconfig.build.tsbuildinfo"
      ]
    },
    "deploy": {
      "inputs": ["production", "^production"],
      "dependsOn": ["^package", "^deploy", "^build", "bootstrap"]
    },
    "deploy-staging": {
      "inputs": ["production", "^production"],
      "dependsOn": [
        "^package",
        "^build",
        "^deploy-staging",
        "bootstrap-staging"
      ]
    },
    "deploy-production": {
      "inputs": ["production", "^production"],
      "dependsOn": [
        "^package",
        "^build",
        "^deploy-production",
        "bootstrap-production"
      ]
    },
    "test-linter": {
      "inputs": ["default", "^production", "{workspaceRoot}/.eslintrc.js"],
      "dependsOn": ["^package"]
    },
    "test-unit": {
      "inputs": ["default", "^production"],
      "dependsOn": ["^package"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "test-type": {
      "inputs": ["default", "^production"],
      "dependsOn": ["^package"]
    },
    "test-circular": {
      "inputs": ["default", "^production"],
      "dependsOn": ["^package"]
    }
  },
  "affected": {
    "defaultBase": "main"
  }
}
